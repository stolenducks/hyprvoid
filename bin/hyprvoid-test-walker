#!/usr/bin/env bash
# Test walker window properties
set -euo pipefail

echo "Testing walker window properties..."
echo ""
echo "1. Checking if walker binary exists:"
which walker || echo "  ✗ Walker not found"
echo ""

echo "2. Checking keybinding:"
grep "mod.*SPACE.*walker" ~/.config/hypr/bindings.conf || echo "  ✗ Binding not found"
echo ""

echo "3. Checking window rules:"
cat ~/.config/hypr/windowrules.conf | grep -i walker
echo ""

echo "4. Launch walker and check its window class:"
echo "   Press SUPER+SPACE now, then run this in another terminal:"
echo "   hyprctl clients | grep -B2 -A10 walker"
echo ""

echo "5. Current walker config theme:"
grep "^theme" ~/.config/walker/config.toml || echo "  No theme setting found"
echo ""

echo "6. Available walker themes:"
ls -1 ~/.config/walker/themes/
