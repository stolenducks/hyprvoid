#!/usr/bin/env bash
# HyprVoid Theme Lister
# Lists all available themes

set -Eeuo pipefail

THEMES_DIR="$HOME/.config/hyprvoid/themes"

if [[ ! -d "$THEMES_DIR" ]]; then
  echo "No themes directory found"
  exit 1
fi

find "$THEMES_DIR" -mindepth 1 -maxdepth 1 -type d | sort | while read -r path; do
  basename "$path"
done
